<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imagem_view_filme_details"
        android:src="@drawable/ahoradopesadelo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescripition"/>

    <TextView
        android:id="@+id/text_view_titulo_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A hora do Pesadelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagem_view_filme_details"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_view_genero_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Terror. Psicologico. Horror"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_titulo_details"
        app:layout_constraintStart_toStartOf="@id/text_view_titulo_details"/>

    <TextView
        android:id="@+id/text_view_lancamento_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_genero_details"
        app:layout_constraintTop_toBottomOf="@id/text_view_titulo_details"
        tools:text="1986-10-27" />

    <TextView
        android:id="@+id/text_view_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="A ticking-time-bomb insomniac and a slippery soap salesman channel primal male aggression into a shocking new form of therapy. Their concept catches on, with underground fight clubs forming in every town, until an eccentric gets in the way and ignites an out-of-control spiral toward oblivion."
        app:layout_constraintTop_toBottomOf="@id/text_view_genero_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>